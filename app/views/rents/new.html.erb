<%= render "shared/navbar" %>
<div class="container">
  <div class="shadow p-3 mb-5 bg-white rounded">
    <div class="row">
     <div class="col-sm-12">
      <h1>You are about to rent a pet</h1>
        <%= simple_form_for [@pet, @rent] do |f| %>
        <%= f.input :start_period, as: :date %>
        <%= f.input :end_period, as: :date %>
        <%= f.submit "Rent", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
