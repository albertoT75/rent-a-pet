<h1> Name: <%= @pet.name %></h1>
<h2> description: <%= @pet.description%></h2>
<ul>
  <h1><p> age: <%= @pet.age %> </p></h1>
  <h1><p> breed: <%= @pet.breed %> </p></h1>
</ul>
<%#= cl_image_tag @pet.photo, height: 300, width: 400, crop: :fill %>
<br>
<br>
<% if policy(@pet).edit? %>
  <h2> <%= link_to "Edit my Pet", edit_pet_path %>  </h2>
<% end %>
<% if policy(@pet).destroy? %>
  <h2> <%= link_to "Delete my Pet", pet_path %>  </h2>
<% end %>

<h3><%= link_to "Back to My Pets", pets_path %></h3>

