<!-- index.html.erb -->
<h1> Available Pets </h1>

<div class="container">
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card">
        <% if pet.photo.present? %>
          <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path pet.photo, height: 300, width: 400, crop: :fill %>')"></div>
            <div class="card-description">
              <h3><%= link_to pet.name, pet_path(pet)%></h3>
              <h4><%= pet.price %></h4>
            </div>
          </div>
          <% else %>
            <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2))"></div>
            <div class="card-description">
              <h3><%= link_to pet.name, pet_path(pet)%></h3>
              <h4><%= pet.price %></h4>
            </div>
          </div>
          <% end %>
      </div>
    <% end %>
  </div>
</div>


<div
  id="map"
  style="width: 80%;
  height: 500px;
  margin: 0 auto;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

